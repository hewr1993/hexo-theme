
<% permalink = config.url + config.root + post.path %>
<main class="content" role="main">
	<article class="post">
		<% if (post.photos.length > 0) { %>
	<div class="pin-container slider-flexslider">
		<section class="flexslider">
			<ul class="slides">
		<% post.photos.forEach(function(photo, index) { %>
			<li style="overflow:hidden"><a rel="gallery" href="<%= photo %>"><img src="<%= photo %>" /></a></li>
		<% }); %>
			</ul>
		</section>
	</div>
	<% } %>
	<div class="post-panel">
		<h1 class="post-title"><%- post.title %></h1>
		<%- partial('post/meta') %>
		<section class="post-content">
			<%- post.content %>
		</section>
		<footer class="post-footer">
			<%- partial('post/author') %>
			<%- partial('post/share') %>
		</footer>
	<div class="post-panel">
	</article>
	<%- partial('post/navigation') %>
	<%- partial('post/comments') %>
</main>
