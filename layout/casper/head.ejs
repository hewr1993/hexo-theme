<%
	var title = page.title;

	if (is_archive()){
		title = 'Archives';

		if (is_month()){
			title += ': ' + page.year + '/' + page.month;
		} else if (is_year()){
			title += ': ' + page.year;
		}
	} else if (is_category()){
		title = 'Category: ' + page.category;
	} else if (is_tag()){
		title = 'Tag: ' + page.tag;
	}
%>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="UTF-8" >
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
	<title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
	<link rel="icon" href="<%- config.root %>img/arc-reactor.jpg" type="image/x-icon">
	<meta name="description" content="<%- config.subtitle %>" />
	<meta name="HandheldFriendly" content="True" />
	<meta name="MobileOptimized" content="320" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" type="text/css" href="<%- config.root %>fonts/foundation-icons.css" />
	<link rel="stylesheet" type="text/css" href="<%- config.root %>css/screen.css" />
	<link rel="stylesheet" type="text/css" href="<%- config.root %>css/style.css" />
	<meta name="generator" content="<%- config.title %>">
	<link rel="stylesheet" href="<%- config.root %>css/flexslider.css" type="text/css" />
	<script src="<%- config.root %>js/jquery.min.js"></script>
	<script src="<%- config.root %>js/jquery.flexslider-min.js"></script>
	<script type="text/javascript">
		jQuery.noConflict()(function($){
			$('.slides').each(function() {
				var height = parseInt($(this).width() * 0.5625);
				$(this).find('li').each(function() {
					$(this).css({'height':height+'px'});
				});
			});
			$('.flexslider').flexslider({
				animation : ' fade ',
				direction : 'horizontal',
				directionNav : true,
				reverse : false,
				slideshowSpeed : 7000,
				animationSpeed : 600,												
				controlNav: false,
				keyboardNav: false,
				prevText: "&lt;",
				nextText: "&gt;",
				touch: true,
			});
		});
	</script>

	<% if (config.rss) { %>
	<link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.rss %>">
	<% } %>
	<% if (config.feed && config.feed.type == 'atom') { %>
	<link rel="alternate" type="application/atom+xml" title="Atom 0.3" href="<%- config.feed.path %>">
	<% } %>
	<% if (config.feed && config.feed.type == 'rss') { %>
		<link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.feed.path %>">
	<% } %>

